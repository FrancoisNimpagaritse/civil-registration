{% extends 'base.html.twig' %}

{% block title %}Andikwa ~ Enregistrer un décès{% endblock %}

{% block body %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Registre des décès</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Décès</a></li>
              <li class="breadcrumb-item active">Nouveau</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">            

            <div class="card">
              <div class="card-header bg-secondary">
                <h3 class="card-title">Inscrire un cas de décès dans le registre de l'Etat Civil</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              {{form_start(form)}}
                <div class="row">
                  <div class="col">
                  {{form_row(form.dateDeces)}}
                  </div>
                  <div class="col">
                  {{form_row(form.lieuDeces)}}
                  </div>
                  <div class="col">
                  {{form_row(form.causeDeces)}}
                  </div>
                  <div class="col">
                  {{form_row(form.numeroActeDeces)}}
                  </div>
                  <div class="col">
                  {{form_row(form.numeroVolume)}}
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                  {{form_row(form.personne)}}
                  </div>
                  <div class="col">
                  {{form_row(form.nomCompletDemandeur)}}
                  </div>
                  <div class="col">
                  {{form_row(form.adresseDemandeur)}}
                  </div>
                  <div class="col">
                  {{form_row(form.phoneDemandeur)}}
                  </div>
                  <div class="col">
                  {{form_row(form.copieCertificatDeces)}}
                  </div>
                </div>
                <button type="submit" class="btn btn-info"><i class="fas fa-save mr-1"></i>Valider l'inscription</button>
                {{form_end(form)}}
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <script>
    $('.js-select-personne').select2();
  </script>
{% endblock %}
