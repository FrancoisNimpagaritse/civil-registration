{% extends 'base.html.twig' %}

{% block title %}Andikwa ~ Registre des naissances{% endblock %}

{% block body %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Registre des naissances</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Naissances</a></li>
              <li class="breadcrumb-item active">Registre</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">            

            <div class="card">
           <!--   <div class="card-header">
                <h3 class="card-title">Liste des personnes inscrites dans le registre d'Etat Civil</h3>
              </div> -->
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Né(e) le</th>
                    <th>Né(e) en colline</th>
                    <th>Né(e) en zone</th>
                    <th>Né(e) en communne</th>
                    <th>Né(e) en province</th>
                    <th>Père</th>
                    <th>Mère</th>
                    <th>Sexe</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for naissance in naissances %}
                  <tr>
                    <td>{{naissance.personne.nom}}</td>
                    <td>{{naissance.personne.prenom}}</td>
                    <td>{{naissance.dateNaissance | date("d/m/Y")}}</td>
                    <td>{{naissance.collineNaissance}}</td>
                    <td>{{naissance.zoneNaissance}}</td>
                    <td>{{naissance.communeNaissance}}</td>
                    <td>{{naissance.provinceNaissance}}</td>
                    <td>{{naissance.personne.pere.nom}} {{naissance.personne.pere.prenom}}</td>
                    <td>{{naissance.personne.mere.nom}} {{naissance.personne.mere.prenom}}</td>
                    <td>{{naissance.personne.sexe}}</td>
                    <td>
                        <a href="{{ path('admin_naissances_show', {'id': naissance.id}) }}" class="btn btn-xs btn-warning mb-2"><i class="fas fa-eye"></i></a>
                        <a href="#" class="btn btn-xs btn-primary mb-2"><i class="fas fa-print"></i></a>
                    </td>
                  </tr>
                  {% endfor %}
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Né(e) le</th>
                    <th>Né(e) en colline</th>
                    <th>Né(e) en zone</th>
                    <th>Né(e) en communne</th>
                    <th>Né(e) en province</th>
                    <th>Père</th>
                    <th>Mère</th>
                    <th>Sexe</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
