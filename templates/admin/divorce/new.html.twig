{% extends 'base.html.twig' %}

{% block title %}Andikwa ~ Enregistrer un divorce{% endblock %}

{% block body %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Fiche d'enregistrement d'un divorce</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Divorces</a></li>
              <li class="breadcrumb-item active">nouveau</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">            

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Enregistrer un divorce dans le registre de l'Etat Civil</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                {{form_start(form)}}
                <div class=" row">
                    <div class="col"> 
                    {{form_row(form.mariage)}}
                    </div>
                    <div class="col">
                    {{form_row(form.dateDivorce)}}
                    </div>
                    <div class="col">
                    {{form_row(form.lieuDecisionDivorce)}}
                    </div>
                </div>
                <div class=" row">
                    <div class="col">
                    {{form_row(form.professionEpoux)}}
                    </div>
                    <div class="col"> 
                    {{form_row(form.professionEpouse)}}
                    </div>                    
                    <div class="col"> 
                    {{form_row(form.nombreEnfantsIssusMariage)}}
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Valider l'inscription</button>
                {{form_end(form)}}
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
