{% extends 'base.html.twig' %}

{% block title %}Andikwa ~ Registre des mariages{% endblock %}

{% block body %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Registre des mariages</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Mariages</a></li>
              <li class="breadcrumb-item active">Registre</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">            

            <div class="card">
              
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>N°</th>
                    <th>Date mariage</th>
                    <th>Célébré en commune</th>
                    <th>Province</th>
                    <th>Noms Epoux</th>
                    <th>Noms Epouse</th>
                    <th>N° Acte</th>
                    <th>N° Volume</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for mariage in mariages %}
                  <tr>
                    <td>{{mariage.id}}</td>
                    <td>{{mariage.dateMariage | date("d/m/Y")}}</td>
                    <td>{{mariage.communeMariage}}</td>
                    <td>{{mariage.provinceMariage}}</td>
                    <td>{{mariage.personneEpoux}}</td>
                    <td>{{mariage.personneEpouse}}</td>
                    <td>{{mariage.numeroActeMariage}}</td>
                    <td>{{mariage.numeroVolume}}</td>
                    <td>
                      <a href="{{ path('impression_extrait_acte_mariage', {'id': mariage.id}) }}" target="_blank" class="btn btn-xs btn-primary mb-2"><i class="fas fa-print"></i></a>
                    </td>
                  </tr>                      
                  {% endfor %}                 
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>N°</th>
                    <th>Date mariage</th>
                    <th>Célébré en commune</th>
                    <th>Province</th>
                    <th>Noms Epoux</th>
                    <th>Noms Epouse</th>
                    <th>N° Acte</th>
                    <th>N° Volume</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
