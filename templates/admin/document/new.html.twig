{% extends 'base.html.twig' %}

{% block title %}Andikwa ~ Ajouter un document{% endblock %}

{% block body %}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Fiche d'jout d'un document</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Documents</a></li>
              <li class="breadcrumb-item active">nouveau</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">            

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Ajouter un document d'Etat Civil à délivrer</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                {{form_start(form)}}
                <div class=" row">
                    <div class="col"> 
                    {{form_row(form.type)}}
                    </div>
                    <div class="col">
                    {{form_row(form.fraisUnitaire)}}
                    </div>
                </div>
                <div class=" row">
                    <div class="col">
                    {{form_row(form.description)}}
                    </div>
                 </div>                
                <button type="submit" class="btn btn-info">Valider l'ajout</button>
                {{form_end(form)}}
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
