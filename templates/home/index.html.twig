              <img src="/admin_assets/dist/img/avatar.png" class="img-circle elevation-2" alt="User Image">
          </div>
          <div class="info">
              <a href="#" class="nav-link" style="color:blue;"> {{app.user.prenom}} {{app.user.nom}}</a>
          </div>
          {% else %}
          <div class="info">
              <a href="#" class="d-block">Génie des technologies</a>
          </div>
          {% endif %}
      </div>

    </div>
